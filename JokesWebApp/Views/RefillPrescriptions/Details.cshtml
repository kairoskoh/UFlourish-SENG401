@model JokesWebApp.Models.RefillPrescriptions


@{
    ViewData["Title"] = "Details";
}

<h1>Refill Request Details</h1>

<div>
    <h4>  </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Requested Patient
            @*@Html.DisplayNameFor(model => model.RefillDate)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            Medicine Name
            @*@Html.DisplayNameFor(model => model.MedicineName)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicineName)
        </dd>
        <dt class = "col-sm-2">
            Requested Date
            @*@Html.DisplayNameFor(model => model.RefillDate)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequestRefillDate)
        </dd>
        <dt class="col-sm-2">
            @if (ViewData["email"].Equals("admin123@gmail.com"))
            {
                <text> Admin Access: </text>

            }
        </dt>
        <dd class="col-sm-10">
        </dd>
        <dt class="col-sm-2">
            @if (ViewData["email"].Equals("admin123@gmail.com"))
            {
                <input type="button" value="Approve Request" onclick="showAlertForApprove()" class="btn btn-success" />

            }
        </dt>

        <script>
            function showAlertForApprove() {
                alert("Your request has been approved. An email has been sent containing your prescription details.");
                status = 1;
            }
        </script>

        <dd class="col-sm-10">
            @if (ViewData["email"].Equals("admin123@gmail.com"))
            {
                <input type="button" value="Decline Request" onclick="showAlertForDecline()" class="btn btn-danger" />

            }
        </dd>

        <script>
            function showAlertForDecline() {
                alert("Your request has been declined. An email has been sent with more details.");
                @{
                    
                        
                }
            }
        </script>

        <dt class="col-sm-2">
            Status
        </dt>
        @if(status == -1)
        {
            <dd class="col-sm-10">
                Pending ....
            </dd>
        }
        @if(status == 0)
        {
            <dd class="col-sm-10">
                <font size="13" color="red"> Declined </font>
                <br>
                <text> Please Email help@ucalgary.ca for more information</text>
            </dd>
        }
        @if(status == 1)
        {
            <dd class="col-sm-10">
                <font size="13" color="green"> Approved </font>
                <br>
                <text> Please check your pickup date to collect your prescription</text>
            </dd>
            <dt class="col-sm-2">
                Pickup Date
            </dt>
            <dd class="col-sm-10">
                @{
                    DateTime pickupDate = Model.RequestRefillDate;
                    pickupDate.AddDays(7);
                }
                @pickupDate.ToString("d")
            </dd>
        }
    </dl>
</div>


