@model IEnumerable<JokesWebApp.Models.RefillPrescriptions>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Prescription Record</h1>

<p>
    <a asp-action="Create">Create New Refill Request</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicineName)
            </th>
            <th>
             
                @Html.DisplayNameFor(model => model.RequestRefillDate)
                    
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>


@foreach (var item in Model) {

        var dateCompare = item.RequestRefillDate.CompareTo(DateTime.Now);

        @if (dateCompare > 0)
        {
                <tr>
                    <td>
                @Html.DisplayFor(modelItem => item.MedicineName)
            </td>
            <td>
            
                @Html.DisplayFor(modelItem => item.RequestRefillDate)
                    
            </td>
            <td>
               
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                @*<a asp-action="Details" asp-route-id="@item.Id">Check Status</a> *@
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                <input type="button" value="Check Status" onclick="location.href='@Url.Action("Details", new { id = @item.Id })'" />
            </td>
            </tr>
        }
}
    </tbody>
</table>
